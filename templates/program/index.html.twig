{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}

{% include 'program/_program_navbar.html.twig' %}

    <main>

        <h1 class="programBigTitle">Toutes les séries</h1>
        <button class="btn btn-dark"><a class="text-light text-decoration-none" href="/program/new">Ajouter une série</a></button>

        <section class="programList">
            {% for program in programs %}
                <div class="programCard">
                    <div class="programTitle">
                        <h3>{{ program.title }}</h3>
                        <p>Catégorie : {{ program.category.name }}</p>
                        <img src="{{ program.poster }}">
                    </div>
                    <marquee direction="up" scrollamount="2" width="80%" height="150px" class="programText">{{ program.synopsis }}</marquee>
                    <button class="btn btn-dark"><a href="/program/show/{{ program.id }}">En savoir plus</a></button>
                </div>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </section>

    </main>
    
{% endblock %}
