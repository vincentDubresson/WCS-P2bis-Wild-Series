{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}

    {% include '/admin/layouts/_admin_navbar.html.twig' %}

    
        <section class="adminList">

        <h1>Actor</h1>

        <div class="container d-inline">
            <button class="btn btn-dark"><a class="text-light text-decoration-none" href="{{ path('app_actor_index') }}">Retour</a></button>
            <button class="btn btn-dark"><a class="text-light text-decoration-none" href="{{ path('app_actor_edit', {'id': actor.id}) }}">Modifier</a></button>
        </div>

        <div class="adminTable">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ actor.id }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ actor.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Lastname</th>
                        <td>{{ actor.lastname }}</td>
                    </tr>
                    <tr>
                        <th>BirthDate</th>
                        <td>{{ actor.birthDate ? actor.birthDate|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>

    {{ include('admin/actor/_delete_form.html.twig') }}
{% endblock %}
