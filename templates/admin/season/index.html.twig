{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}

    {% include '/admin/layouts/_admin_navbar.html.twig' %}

    <section class="adminList">

        <h1>Season index</h1>

        <button class="btn btn-dark"><a href="{{ path('app_season_new') }}">Ajouter</a></button>

            <div class="adminTable">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Série</th>
                            <th>Saison</th>
                            <th>Année</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for season in seasons %}
                        <tr>
                            <td>{{ season.program.title }}</td>
                            <td>{{ season.number }}</td>
                            <td>{{ season.year }}</td>
                            <td>{{ season.description }}</td>
                            <td>
                                <button class="btn btn-dark"><a href="{{ path('app_season_show', {'id': season.id}) }}">Afficher</a></button>
                                <button class="btn btn-dark"><a href="{{ path('app_season_edit', {'id': season.id}) }}">Éditer</a></button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun résultat</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

        </div>

    </section>
    
{% endblock %}
