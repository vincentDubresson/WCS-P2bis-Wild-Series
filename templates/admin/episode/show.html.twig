{% extends 'base.html.twig' %}

{% block title %}Admin - Épisode{% endblock %}

{% block body %}

    {% include '/admin/layouts/_admin_navbar.html.twig' %}

    <section class="adminList">

        <h1>Épisode</h1>

        <div class="container d-inline">
            <button class="btn btn-dark"><a class="text-light text-decoration-none" href="{{ path('app_episode_index') }}">Retour</a></button>
            <button class="btn btn-dark"><a class="text-light text-decoration-none" href="{{ path('app_episode_edit', {'id': episode.id}) }}">Modifier</a></button>
        </div>

        <div class="adminTable">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ episode.id }}</td>
                    </tr>
                    <tr>
                        <th>Série</th>
                        <td>{{ episode.season.program.title }}</td>
                    </tr>
                    <tr>
                        <th>Saison</th>
                        <td>{{ episode.season.number }}</td>
                    </tr>

                    <tr>
                        <th>Épisode</th>
                        <td>{{ episode.number }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ episode.title }}</td>
                    </tr>
                    <tr>
                        <th>Synopsis</th>
                        <td>{{ episode.synopsis }}</td>
                    </tr>
                </tbody>
            </table>

        </div>

    </section>

    {{ include('/admin/episode/_delete_form.html.twig') }}
{% endblock %}
